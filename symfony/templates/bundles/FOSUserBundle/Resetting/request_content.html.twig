{% trans_default_domain 'FOSUserBundle' %}

<div class="wrapper">
    <div class="sign-in-page">
        <div class="signin-popup">
            <div class="signin-pop">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="cmp-info">
                            {{ include('intro.html.twig') }}
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="login-sec">
                            <ul class="sign-control">
                                <li><a href="{{ path('fos_user_security_login') }}" title="Sign in  ">Sign In</a></li>
                                <li><a href="{{ path('fos_user_registration_register') }}" title="Register">Register</a></li>
                            </ul>
                            <div class="sign_in_sec current" id="tab-1">
                                <h3>Request password</h3>
                                <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">


                                    <div class="row">
                                        <div class="col-lg-12 no-pdd">
                                            <div class="sn-field">
                                                <input type="text" id="username" name="username" required="required" placeholder="Username" />
                                                <i class="la la-user"></i>
                                            </div>
                                        </div>

                                        <div class="col-lg-12 no-pdd">
                                            <button type="submit" id="_submit" name="_submit" value="{{ 'resetting.request.submit'|trans }}">{{ 'resetting.request.submit'|trans }}</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{ include('footer.html.twig') }}
    </div>
</div>
