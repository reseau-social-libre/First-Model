{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="wrapper">
    <div class="sign-in-page">
        <div class="signin-popup">
            <div class="signin-pop">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="cmp-info">
                            {{ include('intro.html.twig') }}
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="login-sec">
                            <ul class="sign-control">
                                <li class="current"><a href="{{ path('fos_user_security_login') }}" title="Sign in  ">Sign In</a></li>
                                <li><a href="{{ path('fos_user_registration_register') }}" title="Register">Register</a></li>
                            </ul>
                            <div class="sign_in_sec current" id="tab-1">
                                <h3>Sign in</h3>
                                <form action="{{ path("fos_user_security_check") }}" method="post">
                                    {% if csrf_token %}
                                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                                    {% endif %}

                                    <div class="row">
                                        <div class="col-lg-12 no-pdd">
                                            <div class="sn-field">
                                                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" placeholder="Username" />
                                                <i class="la la-user"></i>
                                            </div>
                                        </div>

                                        <div class="col-lg-12 no-pdd">
                                            <div class="sn-field">
                                                <input type="password" id="password" name="_password" required="required" autocomplete="current-password" placeholder="Password" />
                                                <i class="la la-lock"></i>
                                            </div>
                                        </div>

                                        <div class="col-lg-12 no-pdd">
                                            <div class="checky-sec">
                                                <div class="fgt-sec">
                                                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                                                    <label for="remember_me"><span></span></label>
                                                    <small>{{ 'security.login.remember_me'|trans }}</small>
                                                </div>
                                                <a href="{{ path('fos_user_resetting_request') }}">Forgot password ?</a>
                                            </div>
                                        </div>

                                        <div class="col-lg-12 no-pdd">
                                            <button type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}">{{ 'security.login.submit'|trans }}</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{ include('footer.html.twig') }}
    </div>
</div>
