{% trans_default_domain 'FOSUserBundle' %}

<div class="wrapper">
    <div class="sign-in-page">
        <div class="signin-popup">
            <div class="signin-pop">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="cmp-info">
                            {{ include('intro.html.twig') }}
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="login-sec">
                            <ul class="sign-control">
                                <li><a href="{{ path('fos_user_security_login') }}" title="Sign in  ">Sign In</a></li>
                                <li class="current"><a href="{{ path('fos_user_registration_register') }}" title="Register">Register</a></li>
                            </ul>
                            <div class="sign_in_sec current" id="tab-1">
                                <h3>Register</h3>
                                <form action="{{ path("fos_user_registration_register") }}" method="post">
                                    {{ form_widget(form._token) }}
                                    <div class="row">
                                        <div class="col-lg-12 no-pdd">
                                            <div class="sn-field">
                                                <input type="email" id="fos_user_registration_form_email" name="fos_user_registration_form[email]" value="" required="required" placeholder="Email" />
                                                <i class="la la-envelope"></i>
                                            </div>
                                        </div>

                                        <div class="col-lg-12 no-pdd">
                                            <div class="sn-field">
                                                <input type="text" id="fos_user_registration_form_username" name="fos_user_registration_form[username]" value="" required="required" placeholder="Username" maxlength="180" pattern=".{2,}" />
                                                <i class="la la-user"></i>
                                            </div>
                                        </div>

                                        <div class="col-lg-12 no-pdd">
                                            <div class="sn-field">
                                                <input type="password" id="fos_user_registration_form_plainPassword_first" name="fos_user_registration_form[plainPassword][first]" required="required" autocomplete="new-password" placeholder="Password" />
                                                <i class="la la-lock"></i>
                                            </div>
                                        </div>

                                        <div class="col-lg-12 no-pdd">
                                            <div class="sn-field">
                                                <input type="password" id="fos_user_registration_form_plainPassword_second" name="fos_user_registration_form[plainPassword][second]" required="required" autocomplete="new-password" placeholder="Repeat Password" />
                                                <i class="la la-lock"></i>
                                            </div>
                                        </div>

                                        <div class="col-lg-12 no-pdd">
                                            <button type="submit" id="_submit" name="_submit" value="{{ 'registration.submit'|trans }}">{{ 'registration.submit'|trans }}</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{ include('footer.html.twig') }}
    </div>
</div>
