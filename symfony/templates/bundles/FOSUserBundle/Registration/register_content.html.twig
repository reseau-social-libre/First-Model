<div class="wrapper">
    <div class="sign-in-page">
        <div class="signin-popup">
            <div class="signin-pop">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="cmp-info">
                            {{ include('intro.html.twig') }}
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="login-sec">
                            <ul class="sign-control">
                                <li><a href="{{ path('fos_user_security_login') }}" title="Sign in">{{ 'auth.sign_in'|trans }}</a></li>
                                <li class="current"><a href="{{ path('fos_user_registration_register') }}" title="Register">{{ 'auth.register'|trans }}</a></li>
                            </ul>
                            <div class="sign_in_sec current" id="tab-1">
                                <h3>{{ 'auth.register'|trans }}</h3>
                                {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
                                <div class="my-custom-class-for-errors">
                                    {{ form_errors(form) }}
                                </div>
                                    <div class="row">
                                        <div class="col-lg-12 no-pdd">
                                            <div class="error">
                                                {{ form_errors(form.email) }}
                                            </div>
                                            <div class="sn-field">
                                                <i class="la la-envelope"></i>
                                                {{ form_widget(form.email) }}
                                            </div>
                                        </div>

                                        <div class="col-lg-12 no-pdd">
                                            <div class="error">
                                                {{ form_errors(form.username) }}
                                            </div>
                                            <div class="sn-field">
                                                <i class="la la-user"></i>
                                                {{ form_widget(form.username) }}
                                            </div>
                                        </div>

                                        <div class="col-lg-12 no-pdd">
                                            <div class="error">
                                                {{ form_errors(form.plainPassword.first) }}
                                            </div>
                                            <div class="sn-field">
                                                <i class="la la-lock"></i>
                                                {{ form_widget(form.plainPassword.first) }}
                                            </div>
                                            <div class="sn-field">
                                                <i class="la la-lock"></i>
                                                {{ form_widget(form.plainPassword.second) }}
                                            </div>
                                        </div>

                                        <div class="col-lg-12 no-pdd">

                                            {% set terms_link %}<a title="{{ 'auth.read_terms'|trans }}" href="{{ path('general-terms') }}">{{ 'auth.general_terms_conditions'|trans }}</a>{% endset %}
                                            {% set general_terms_and_conditions %}{{ 'auth.accept_conditions'|trans({ '%general_terms_and_conditions%': terms_link })|raw }}{% endset %}
                                            <div class="error">
                                                {{ form_errors(form.termsAccepted) }}
                                            </div>
                                            <div class="sn-field terms">
                                                {{ form_widget(form.termsAccepted) }}
                                                {#{{ form_label(form.termsAccepted) }}#}
                                                <label for="{{ form.termsAccepted.vars.id }}">{{ general_terms_and_conditions|raw }}</label>
                                            </div>
                                        </div>

                                        <div class="col-lg-12 no-pdd">
                                            <button type="submit" id="_submit" name="_submit">{{ 'auth.register_submit'|trans }}</button>
                                        </div>
                                    </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{ include('footer.html.twig') }}
    </div>
</div>
