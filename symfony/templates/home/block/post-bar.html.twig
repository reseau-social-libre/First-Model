{% for post in posts.currentPageResults %}
    <div class="post-bar">
        <div class="post_topbar">
            <div class="usy-dt">
                <img src="http://via.placeholder.com/50x50" alt="">
                <div class="usy-name">
                    <h3>{{ post.user.username }}</h3>
                    <span><img src="{{ asset('build/images/clock.png') }}" alt=""/>{{ post.createdAt|ago }}</span>
                </div>
            </div>
            {% if app.user.id == post.user.id or is_granted('ROLE_ADMIN') %}
                <div class="ed-opts">
                    <a href="#" title="" class="ed-opts-open"><i class="la la-ellipsis-v"></i></a>
                    <ul class="ed-options">
                        <li><a href="#" title="">{{ 'block.post.edit'|trans }}</a></li>
                        <li><a href="{{ path('post-remove', {'id': post.id}) }}" title="">{{ 'block.post.delete'|trans }}</a></li>
                    </ul>
                </div>
            {% endif %}
        </div>
        <div class="epi-sec">
            <ul class="descp">
                <li><img src="{{ asset('build/images/icon9.png') }}" alt=""><span>{{ post.post_type }}</span></li>
            </ul>
            <ul class="bk-links">
                <li><a href="#" title=""><i class="la la-bookmark"></i></a></li>
                <li><a href="#" title=""><i class="la la-envelope"></i></a></li>
            </ul>
        </div>
        <div class="job_descp">
            <h3>{{ post.title }}</h3>
            {{ post.content|md2html }}
        </div>
        <div class="job-status-bar">
            <ul class="like-com">
                <li id="like-btn-{{ post.id }}">
                    {{ include('home/block/like-btn.html.twig') }}
                </li>

                <li id="comment-number-{{ post.id }}">
                    <a href="#" title="" class="com" data-post="{{ post.id }}">
                        <img src="{{ asset('build/images/com.png') }}" alt="">
                        {% set count =  post.comments|length %}
                        {% transchoice count with {'%count%': count} %}block.post.comment{% endtranschoice %}
                    </a>
                </li>
            </ul>
        </div>
        <div class="comment-section hidden" id="comment-section-{{ post.id }}">
            <div class="comment-sec">
                <ul id="comment-list-{{ post.id }}">
                    {% for comment in post.comments %}
                        {{ include('home/block/comment-item.html.twig') }}
                    {% endfor %}
                </ul>
            </div>
            {{ include('home/block/post-comment.html.twig') }}
        </div>
    </div>
{% endfor %}

<nav aria-label="Page navigation example" class="full-pagi">
    {% if posts.haveToPaginate %}
        <ul class="pagination">
            {% if posts.hasPreviousPage %}
                {% if posts.currentPage -1 == 1%}
                    <li class="page-item">
                        <a class="page-link pvr" href="{{ path('home') }}">{{ 'nav.prev'|trans }}</a>
                    </li>
                {% else %}
                    <li class="page-item">
                        <a class="page-link pvr" href="{{ path('home_paginated', {page: posts.currentPage -1}) }}">{{ 'nav.prev'|trans }}</a>
                    </li>
                {% endif %}
            {% endif %}
            {% for i in 1..posts.nbPages %}
                <li class="page-item">
                    {% if i == posts.currentPage %}
                        {% if i == 1 %}
                            <a class="page-link active" href="{{ path('home') }}">{{ i }}</a></li>
                        {% else %}
                            <a class="page-link active" href="{{ path('home_paginated', {page: i}) }}">{{ i }}</a></li>
                        {% endif %}

                    {% else %}
                        {% if i == 1 %}
                            <a class="page-link" href="{{ path('home') }}">{{ i }}</a></li>
                        {% else %}
                            <a class="page-link" href="{{ path('home_paginated', {page: i}) }}">{{ i }}</a></li>
                        {% endif %}
                    {% endif %}
                </li>
            {% endfor %}
            {% if posts.hasNextPage %}
                <li class="page-item"><a class="page-link pvr" href="{{ path('home_paginated', {page: posts.currentPage +1}) }}">{{ 'nav.next'|trans }}</a></li>
            {% endif %}
        </ul>
    {% endif %}
</nav>
