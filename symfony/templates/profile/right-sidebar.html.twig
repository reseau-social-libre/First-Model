<div class="col-lg-3 pd-right-none no-pd">
    <div class="right-sidebar">
        <div class="message-btn">
            {% if app.user.id != user.id %}
                <a href="#" title=""><i class="fa fa-envelope"></i> Message</a>
            {% endif %}
        </div>
        <div class="widget widget-portfolio">
            <div class="wd-heady">
                <h3>{{ 'profile.follow_by'|trans }}</h3>
                <i class="fa fa-users" style="float:right; color:#686868;font-size: 1.2em"></i>
            </div>
            <div class="pf-gallery">
                <ul>
                    {% for follower in userRelationShip.followers %}
                        {% if follower.getUserProfilePictures().last() %}
                            <li>
                                <a href="{{ path('profile', {username: follower.username}) }}" title="">
                                    <img src="{{ asset('/uploads/user/profiles/'~ follower.getUserProfilePictures().last().document)|imagine_filter('user_profile_70') }}" alt="">
                                </a>
                            </li>
                        {% else %}
                            <li><a href="{{ path('profile', {username: follower.username}) }}" title=""><img src="http://via.placeholder.com/70x70" alt=""></a></li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>
        </div>

        <div class="widget widget-portfolio">
            <div class="wd-heady">
                <h3>{{ 'profile.friend'|trans }}</h3>
                <i class="fa fa-users" style="float:right; color:#686868;font-size: 1.2em"></i>
            </div>
            <div class="pf-gallery">
                <ul>
                    {% for friend in userRelationShip.friends %}
                        {% if friend.getUserProfilePictures().last() %}
                            <li>
                                <a href="{{ path('profile', {username: friend.username}) }}" title="">
                                    <img src="{{ asset('/uploads/user/profiles/'~ friend.getUserProfilePictures().last().document)|imagine_filter('user_profile_70') }}" alt="">
                                </a>
                            </li>
                        {% else %}
                            <li><a href="{{ path('profile', {username: friend.username}) }}" title=""><img src="http://via.placeholder.com/70x70" alt=""></a></li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</div>
